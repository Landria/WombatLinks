- if flash[:ajax_alert] or flash[:ajax_success]
  = bootstrap_flash
- sites.each do |site|
  .site-item
    i.icon-ok
    span
      = site.domain.name
    .btn.btn-mini.btn-link
      = link_to (t :destroy), site, :confirm => (t :confirm_site_delete), :method => :delete, :remote => true

    - if current_user.stats_accessible?
      .btn.btn-mini.btn-link
        = link_to (t 'statistics.show_stats'), user_rates_path(site.domain_id)

