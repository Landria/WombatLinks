<div class="row">
  <div class="six columns">
    <h1><%= t :sign_in %></h1>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "nice"}) do |f| %>
        <div class="field">
          <%= f.label :email %>
          <br/>
          <%= f.email_field :email, :class => "oversize input-text" %></div>

        <div class="field">
          <%= f.label :password %>
          <br/>
          <%= f.password_field :password, :class => "oversize input-text" %></div>

        <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div class="actions">
          <input name="commit" type="submit" value="<%= t :sign_in %>" class="nice radius white button">
        </div>
    <% end %>
    <div class="devise_links">
    <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
