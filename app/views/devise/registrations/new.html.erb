<div class="row">
  <div class="six columns">
    <h1><%= t :register %></h1>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "nice"}) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :email %>
          <br/>
          <%= f.email_field :email, :class => "oversize input-text" %>
        </div>

        <div class="field"><%= f.label :password %>
          <br/>
          <%= f.password_field :password, :class => "oversize input-text" %>
        </div>

        <div class="field"><%= f.label t :password_confirmation %>
          <br/>
          <%= f.password_field :password_confirmation, :class => "oversize input-text" %>
        </div>

        <div class="actions">
          <input name="commit" type="submit" value="<%= t :sign_up %>" class="nice radius white button">
        </div>
        <div class="devise_links">
          <%= render "devise/shared/links" %>
        </div>
    <% end %>
  </div>
</div>