<%= form_for :session, :url => session_path do |form| %>
  <div class="field">
    <%= form.label :email %>
    <br/>
    <%= form.text_field :email, :type => "email" %>
  </div>
  <div class="field">
    <%= form.label :password %>
    <br/>
    <%= form.password_field :password %>
  </div>
  <div class="actions">
    <%= form.submit t :sign_in %>
  </div>
<% end %>
